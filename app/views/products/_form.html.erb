<%= form_for @product do |f| %>
 <% if @product.errors.any? %>
  <div id="error_explaination">
    <h2><%= pluralize @product.errors.count, "error" %> so the product cannot be saved</h2>

    <ul> 
      <%= @product.errors.full_messages.each do |msg| %>
        <li><%= msg %> </li>
      <% end %>
    </ul>
  </div>
 <% end %>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :intro %>
    <%= f.text_area :intro %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
