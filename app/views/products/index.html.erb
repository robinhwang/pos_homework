<h2>index page</h2>
<% @products.each do |product| %>
  <div class="property"> <%= product.title %> </div>
  <div class="property"> <%= product.price %> </div>
  <div class="property"> <%= product.intro %> </div>

  <div class="links">
    <%= link_to 'show', product %>
    <%= link_to 'edit', edit_product_path(product) %>
    <%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you Sure , babe?'} %>
  </div>
<% end %>

<div class="new_product">
  <%= link_to "New a product", new_product_path %>
</div>
