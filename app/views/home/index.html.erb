<% @products.each do |product| %>
<div class="product">
  <h3><%= product.title %></h3>
  <%= sanitize(product.intro) %>
  <div class="price_line">
    <span class="price"><%= number_to_currency(product.price) %></span>
    <%= button_to 'Add', line_items_path(product_id: product) %>
  </div>
</div>
<% end %>